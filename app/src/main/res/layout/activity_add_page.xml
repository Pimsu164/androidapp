<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".add_page">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4">

        <TextView
            android:drawableLeft="@drawable/ic_baseline_close_24"
            android:layout_marginLeft="10dp"
            android:id="@+id/closeButton"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="130dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:hint="New post"
            android:id="@+id/newPost"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="5dp"
            android:text="POST"
            android:backgroundTint="@color/material_dynamic_secondary40"
            android:id="@+id/postButton"/>

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3">

        <ImageView
            android:id="@+id/imageInput"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="#BCBCBC"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:hint="Pet name (if any) :"
            android:id="@+id/nameAdd"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="150dp"
            android:layout_column="1"
            android:layout_row="0"
            android:textSize="14dp"
            android:hint="Pet Name"
            android:id="@+id/namePet"/>

        <EditText
            android:id="@+id/detailPet"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:hint="Write a detail..."
            android:maxLength="200"
            android:maxLines="4"
            android:textSize="14dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_column="0"
            android:textSize="15dp"
            android:text="Gallery"
            android:backgroundTint="@color/orange"
            android:id="@+id/imageButton"/>

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:hint="Location :"
            android:id="@+id/mylo"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="100dp"
            android:layout_column="0"
            android:layout_row="0"
            android:textSize="14dp"
            android:hint="Enter your location"
            android:id="@+id/Mylocation"/>


    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="Get Location"
            android:backgroundTint="@color/orange"
            android:id="@+id/getlocation"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="160dp"
            android:text="Map"
            android:backgroundTint="@color/material_dynamic_secondary40"
            android:id="@+id/locationButton"/>

    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:hint="Gender"
        android:id="@+id/genderPet"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Male"
            android:id="@+id/malePet"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Female"
            android:id="@+id/femalePet"/>

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_column="0"
            android:textSize="18dp"
            android:hint="Pet colors :"
            android:id="@+id/colorAdd"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_column="0"
            android:textSize="18dp"
            android:hint="Pet breeds :"
            android:id="@+id/breedAdd"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_column="0"
            android:textSize="18dp"
            android:hint="Pet weight (kg) :"
            android:id="@+id/weightAdd"/>

        <EditText
            android:id="@+id/colorPet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:hint="Color" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_column="1"
            android:hint="Breed"
            android:id="@+id/breedPet"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_column="1"
            android:hint="Weight"
            android:id="@+id/weightPet"/>
    </GridLayout>
</LinearLayout>